---
import { ClientRouter } from "astro:transitions";
import CategoriesSidebar from "@/components/categories/CategoriesSidebar.astro";
import OrderDrawer from "@/components/orders/OrderDrawer";
import "@/styles/global.css";
import Layout from "./Layout.astro";
interface Props {
    title: string;
}
const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>FreshCoffee - {title}</title>
    </head>
    <body>
        <ClientRouter />
        <Layout title="Coffee App">
            <div class="md:flex">
                <CategoriesSidebar />
                <main class="md:flex-1 md:h-screen md:overflow-y-scroll p-5">
                    <slot />
                </main>

                <OrderDrawer client:only="react" />
            </div>
        </Layout>
    </body>
</html>
